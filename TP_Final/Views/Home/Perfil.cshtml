<div class= "recuadro">
    <div class="divPerfilInt">
        <div class="div">
            <img class = "imgPerfil" src ="@ViewBag.Perfil.Foto"> 
            <h5>@ViewBag.Perfil.IdUsuario</h5>
        </div>
        <div class="descr">
            <p class="pDescripcion">@ViewBag.InfoPerfil.Descripcion </p>
        </div>

         




        <div class="logout">
            @if(ViewBag.Usuario != null)
            {
                if(ViewBag.Usuario.IdUsuario == ViewBag.InfoPerfil.IdUsuario)
                {
                    <button class = "botonB" onclick=confirmarEliminar()>Cerrar sesion </button>
                    <a href='@Url.Action("UpdateDataUsuario")'><button class = "botonbl">Editar Usuario</button></a>
                }
            }
        </div>
    </div>
<div>

<script>
    function confirmarEliminar() {
        Swal.fire({
            title: '¿Estás seguro?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#6bc1b1',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Sí, cerrar sesión!',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                // Aquí puedes redirigir a la página de eliminar una vez confirmado
                window.location.href = '@Url.Action("Logout")';
            }
        });
    }
</script>