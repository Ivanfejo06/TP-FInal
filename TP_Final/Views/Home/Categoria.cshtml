<h3 class = "TituloCategoria">@ViewBag.Titulo.Nombre</h3>
@if(ViewBag.Usuario != null)
{
<a href='@Url.Action("CrearForo", new{Id = @ViewBag.Titulo.IdCategoria})'><button class = "boton">Crear Foro</button></a>
}
@foreach(Foro c in ViewBag.ListForosXcategoria)
{
    <a href= '@Url.Action("Foro", new {IdForo = c.IdForo})'> 
        <div class= "CardCategoria"> 
            <h3>@c.Titulo </h3>
            <div><img src= ""></div>
            <div><p>@c.Descripcion </p></div>
        </div>
    </a>
}

